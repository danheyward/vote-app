

<div class="carousel carousel-slider center" data-indicators="true">
  <div class="carousel-item blue white-text" href="#one!">
    <h2>This is <span style='text-decoration:underline'>YOUR</span> Senator!</h2>
    <div class='alignment-div'>
      <div class='headshot-wrapper'>
          <div class='repheadshot' style="background-image:url('<%= reps.officials[2].photoUrl %>')"></div>
      </div>
      <div class='repinfo'>
        <ul>
          <li class='name'><%= reps.officials[2].name %></li>
          <li class='party'><%= reps.officials[2].party %></li>
          <li class='phone'><%= reps.officials[2].phones %></li>
          <a class='link white-text' href='<%= reps.officials[2].urls[0] %>' target='_blank'><li class='link'>More Info</li></a>
        </ul>
      </div>
    </div>
  </div>
  <div class="carousel-item blue white-text" href="#one!">
    <h2>This is <span style='text-decoration:underline'>YOUR</span> Senator!</h2>
    <div class='headshot-wrapper'>
