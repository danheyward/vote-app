        <a class='link white-text' href='<%= reps.officials[4].urls[0] %>' target='_blank'><li class='link'>More Info</li></a>
      </ul>
    </div>
  </div>
</div>

<div class='left bill-container'>
  <h4 class='blue-text'>upcoming senate bills</h4>
  <div class='left bill-scroller'>
  <% if (billsSen !== undefined) { %>
    <% for (var i = 0; i < billsSen.length; i++) { %>
      <div class='repcard'>
        <div class="col s12 m6 l6">
          <div class="card white darken-1">
            <div class="card-content blue-text">
              <a href="<%= billsSen[i].bill_url %>" target='_blank'><i class='medium material-icons prefix action'>work</i></a>
              <span class="card-title"><%= billsSen[i].bill_number %></span>
              <p><%= billsSen[i].description %></p>
            </div>
            <div class="card-action">
              <h6 class='orange-text'>Cast Your Vote!</h6>
              <a class='vote' href="/profile/ballot" data-bill_number='<%= billsSen[i].bill_number %>'
                  data-description='<%= billsSen[i].description %>' data-vote='yes' data-rep1='<%= reps.officials[2].name %>'
                  data-rep1phone='<%= reps.officials[2].phones %>' data-rep2='<%= reps.officials[3].name %>'
                  data-rep2phone='<%= reps.officials[3].phones %>' data-rep3='null' data-rep3phone='null'>
                  <i class='material-icons action'>thumb_up</i>
              </a>
              <a class='vote' href="/profile/ballot" data-bill_number='<%= billsHouse[i].bill_number %>'
                  data-description='<%= billsHouse[i].description %>' data-vote='no' data-rep1='<%= reps.officials[2].name %>'
                  data-rep1phone='<%= reps.officials[2].phones %>' data-rep2='<%= reps.officials[3].name %>'
                  data-rep2phone='<%= reps.officials[3].phones %>' data-rep3='null' data-rep3phone='null'>
                  <i class='material-icons action'>thumb_down</i>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <div class='norep'>
      <div class="col s12 m6 l6">
        <div class="card white darken-1">
          <div class="card-content blue-text">
            <a href="https://www.congress.gov/search?q=%7B%22source%22%3A%22legislation%22%7D" target='_blank'>
              <i class='medium material-icons prefix action'>error</i>
            </a>
            <span class="card-title">None found!</span>
            <p>Check back later for an updated list, or check the Congressional calendar below.</p>
          </div>
          <div class="card-action">
            <a href="https://www.congress.gov/search?q=%7B%22source%22%3A%22legislation%22%7D" target='_blank'>Check the Calendar</a>
          </div>
        </div>
      </div>
    </div>
    <% }; %>
  </div>
</div>

